import React, { useEffect, useState } from "react";
import ArrowLeft from "@2fd/ant-design-icons/lib/ArrowLeft";
import ArrowRight from "@2fd/ant-design-icons/lib/ArrowRight";
import Stepper from "./Stepper";
import { Slider } from "antd";
import { Answer } from "@/store/questions/types";

interface ComponentProps {
    data: Answer;
    handleNext: (e: Answer) => void;
    handlePrev: (e: Answer) => void;
}

const Steps11: React.FC<ComponentProps> = (props) => {
    const [submitData, setSubmitData] = useState<Answer>(props.data);
    const [weedingAmount, setWeedingAmount] = useState<number>(0);
    const [propertyPurchaseAmount, setPropertyPurchaseAmount] =
        useState<number>(0);
    const [educationAmount, setEducationAmount] = useState<number>(0);
    const [healthcareAmount, setHealthcareAmount] = useState<number>(0);
    const [otherAmount, setOtherAmount] = useState<number>(0);
    useEffect(() => {
        if (props.data) {
            setSubmitData(props.data);
            if (props.data.marjorExpenseBeforeRetireWeeding) {
                setWeedingAmount(props.data.marjorExpenseBeforeRetireWeeding);
            }
            if (props.data.marjorExpenseBeforeRetirePropertyPurchase) {
                setPropertyPurchaseAmount(
                    props.data.marjorExpenseBeforeRetirePropertyPurchase
                );
            }
            if (props.data.retireInmarjorExpenseBeforeRetireEducation) {
                setEducationAmount(
                    props.data.retireInmarjorExpenseBeforeRetireEducation
                );
            }
            if (props.data.marjorExpenseBeforeRetireHealthcare) {
                setHealthcareAmount(
                    props.data.marjorExpenseBeforeRetireHealthcare
                );
            }
            if (props.data.marjorExpenseBeforeRetireOther) {
                setOtherAmount(props.data.marjorExpenseBeforeRetireOther);
            }
        }
    }, [props.data]);

    const handleNext = () => {
        return props.handleNext({
            ...submitData,
            marjorExpenseBeforeRetireWeeding: weedingAmount,
            marjorExpenseBeforeRetirePropertyPurchase: propertyPurchaseAmount,
            retireInmarjorExpenseBeforeRetireEducation: educationAmount,
            marjorExpenseBeforeRetireHealthcare: healthcareAmount,
            marjorExpenseBeforeRetireOther: otherAmount,
        });
    };

    const handlePrev = () => {
        return props.handlePrev({
            ...submitData,
            marjorExpenseBeforeRetireWeeding: weedingAmount,
            marjorExpenseBeforeRetirePropertyPurchase: propertyPurchaseAmount,
            retireInmarjorExpenseBeforeRetireEducation: educationAmount,
            marjorExpenseBeforeRetireHealthcare: healthcareAmount,
            marjorExpenseBeforeRetireOther: otherAmount,
        });
    };

    return (
        <div className="ml-[218px] w-[40%] min-w-[800px] bg-white">
            <div className="w-full h-[76px] bg-[#c1c3ce] flex justify-center items-center text-[#0A2C75] py-6 text-md md:text-lg lg:text-xl px-3 text-center"></div>
            <div className="w-full px-[60px] pb-12 mt-5">
                <Stepper step={8} />
                <div className="my-5">
                    <div className="w-full text-xl font-semibold mb-5">
                        Over the next {submitData.wantToRetireAge} years, will
                        you have any of the following major expenses coming up
                        before you retire?
                    </div>
                    <div className="w-full flex gap-1 my-4">
                        <div className="w-3/12 text-center">Wedding</div>
                        <div className="w-6/12 pr-4">
                            <Slider
                                defaultValue={0}
                                max={100000}
                                min={0}
                                value={weedingAmount}
                                className="w-full"
                                onChange={(e) => {
                                    setWeedingAmount(e);
                                }}
                            />
                        </div>
                        <div className="w-3/12 text-center">
                            <span>${weedingAmount.toLocaleString()}</span>
                        </div>
                    </div>
                    <div className="w-full flex gap-1 my-4">
                        <div className="w-3/12 text-center">
                            Property Purchase
                        </div>
                        <div className="w-6/12 pr-4">
                            <Slider
                                defaultValue={0}
                                max={5000000}
                                min={0}
                                value={propertyPurchaseAmount}
                                className="w-full"
                                onChange={(e) => {
                                    setPropertyPurchaseAmount(e);
                                }}
                            />
                        </div>
                        <div className="w-3/12 text-center">
                            <span>
                                ${propertyPurchaseAmount.toLocaleString()}
                            </span>
                        </div>
                    </div>
                    <div className="w-full flex gap-1 my-4">
                        <div className="w-3/12 text-center">Education</div>
                        <div className="w-6/12 pr-4">
                            <Slider
                                defaultValue={0}
                                max={500000}
                                min={0}
                                value={educationAmount}
                                className="w-full"
                                onChange={(e) => {
                                    setEducationAmount(e);
                                }}
                            />
                        </div>
                        <div className="w-3/12 text-center">
                            <span>${educationAmount.toLocaleString()}</span>
                        </div>
                    </div>
                    <div className="w-full flex gap-1 my-4">
                        <div className="w-3/12 text-center">Healthcare</div>
                        <div className="w-6/12 pr-4">
                            <Slider
                                defaultValue={0}
                                max={1000000}
                                min={0}
                                value={healthcareAmount}
                                className="w-full"
                                onChange={(e) => {
                                    setHealthcareAmount(e);
                                }}
                            />
                        </div>
                        <div className="w-3/12 text-center">
                            <span>${healthcareAmount.toLocaleString()}</span>
                        </div>
                    </div>
                    <div className="w-full flex gap-1 my-4">
                        <div className="w-3/12 text-center">Other</div>
                        <div className="w-6/12 pr-4">
                            <Slider
                                defaultValue={0}
                                max={5000000}
                                min={0}
                                value={otherAmount}
                                className="w-full"
                                onChange={(e) => {
                                    setOtherAmount(e);
                                }}
                            />
                        </div>
                        <div className="w-3/12 text-center">
                            <span>${otherAmount.toLocaleString()}</span>
                        </div>
                    </div>
                    <div className="w-full flex gap-1 my-3">
                        <div className="w-9/12"></div>
                        <div className="w-3/12 h-[2px] bg-gray-400"></div>
                    </div>
                    <div className="w-full flex gap-1 mt-3">
                        <div className="w-9/12"></div>
                        <div className="w-3/12 text-center">
                            $
                            {(
                                weedingAmount +
                                propertyPurchaseAmount +
                                educationAmount +
                                healthcareAmount +
                                otherAmount
                            ).toLocaleString()}
                        </div>
                    </div>
                </div>
                <div className="w-full flex justify-between">
                    <button
                        className="flex items-center justify-center px-12 h-[65px] text-xl font-bold bg-[#F2F3F8]"
                        onClick={() => {
                            handlePrev();
                        }}
                    >
                        <ArrowLeft className="mr-3" />
                        Back
                    </button>
                    <button
                        className="flex items-center justify-center px-12 h-[65px] text-xl font-bold bg-[#0A2C75] text-white"
                        onClick={() => {
                            handleNext();
                        }}
                    >
                        Continue
                        <ArrowRight className="ml-3" />
                    </button>
                </div>
            </div>
        </div>
    );
};

export default Steps11;
